generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ingredient {
  id               String             @id @default(cuid())
  name             String
  description      String
  isAlcoholic      Boolean
  imageUrl         String?
  IngredientAmount IngredientAmount[]
}

model IngredientAmount {
  id           String     @id @default(cuid())
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  amount       Int
  ingredientId String
  Cocktail     Cocktail?  @relation(fields: [cocktailId], references: [id])
  cocktailId   String?
}

model Cocktail {
  id                String             @id @default(cuid())
  name              String
  category          String
  recipe            String
  ingredientAmounts IngredientAmount[]
}
